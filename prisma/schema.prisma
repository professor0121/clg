generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

enum PageStatus {
  DRAFT
  PUBLISHED
  ARCHIVED
}

enum PostType {
  POST
  PAGE
  ATTACHMENT
  REVISION
  NAV_MENU_ITEM
  CUSTOM
}

enum PostStatus {
  DRAFT
  PUBLISH
  PRIVATE
  TRASH
}

enum CommentStatus {
  OPEN
  CLOSED
  APPROVED
  SPAM
}

enum PingStatus {
  OPEN
  CLOSED
}

enum TaxonomyType {
  CATEGORY
  TAG
  CUSTOM
}

model User {
  id           String        @id @default(uuid())
  email        String        @unique
  password     String
  role         String        @default("USER")
  isActive     Boolean       @default(true)
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
  username     String
  sessions     Session[]
  pages        Page[]        @relation("PageAuthor")
  posts        Post[]
  comments     Comment[]
  pageVersions PageVersion[]
}

model Session {
  id           String   @id @default(uuid())
  userId       String
  refreshToken String // store hashed token
  userAgent    String?
  ip           String?
  isRevoked    Boolean  @default(false)
  expiresAt    DateTime
  createdAt    DateTime @default(now())

  user User @relation(fields: [userId], references: [id])
}

model Page {
  id        String         @id @default(uuid())
  parentId  String?
  parent    Page?          @relation("PageHierarchy", fields: [parentId], references: [id])
  children  Page[]         @relation("PageHierarchy")
  slug      String
  fullSlug  String         @unique
  status    PageStatus     @default(DRAFT)
  authorId  String
  author    User           @relation("PageAuthor", fields: [authorId], references: [id])
  versions  PageVersion[]
  meta      PageMeta?
  redirects PageRedirect[]
  homeFor   SiteSetting?   @relation("HomePage")

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([parentId])
  @@index([fullSlug])
}

model PageVersion {
  id     String @id @default(uuid())
  pageId String

  title   String
  content String?
  layout  Json?

  version     Int
  isPublished Boolean @default(false)

  createdById String
  createdBy   User   @relation(fields: [createdById], references: [id])

  createdAt DateTime @default(now())

  page Page @relation(fields: [pageId], references: [id], onDelete: Cascade)

  @@unique([pageId, version])
  @@index([pageId])
}

model PageMeta {
  pageId String @id

  metaTitle       String?
  metaDescription String?
  metaKeywords    String?

  noIndex      Boolean @default(false)
  noFollow     Boolean @default(false)
  canonicalUrl String?

  page Page @relation(fields: [pageId], references: [id], onDelete: Cascade)
}

model PageRedirect {
  id String @id @default(uuid())

  oldSlug String @unique
  pageId  String

  page Page @relation(fields: [pageId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())

  @@index([oldSlug])
}

model SiteSetting {
  id String @id @default(uuid())

  homePageId String? @unique
  homePage   Page?   @relation("HomePage", fields: [homePageId], references: [id])

  updatedAt DateTime @updatedAt
}

model Post {
  id       Int    @id @default(autoincrement())
  authorId String

  title   String
  content String
  excerpt String?

  status   PostStatus @default(DRAFT)
  postType PostType   @default(POST)

  slug          String        @unique
  password      String?
  commentStatus CommentStatus @default(OPEN)
  pingStatus    PingStatus    @default(OPEN)

  parentId  Int?
  menuOrder Int  @default(0)

  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  publishedAt DateTime?

  author   User   @relation(fields: [authorId], references: [id])
  parent   Post?  @relation("PostParent", fields: [parentId], references: [id])
  children Post[] @relation("PostParent")

  meta     PostMeta[]
  comments Comment[]
  terms    TermRelationship[]

  @@index([postType])
  @@index([status])
}

model Term {
  id   Int    @id @default(autoincrement())
  name String
  slug String @unique

  taxonomies TermTaxonomy[]
}

model TermTaxonomy {
  id       Int          @id @default(autoincrement())
  termId   Int
  taxonomy TaxonomyType
  parentId Int?
  count    Int          @default(0)

  term     Term           @relation(fields: [termId], references: [id])
  parent   TermTaxonomy?  @relation("TermParent", fields: [parentId], references: [id])
  children TermTaxonomy[] @relation("TermParent")

  posts TermRelationship[]
}

model TermRelationship {
  postId         Int
  termTaxonomyId Int

  post         Post         @relation(fields: [postId], references: [id])
  termTaxonomy TermTaxonomy @relation(fields: [termTaxonomyId], references: [id])

  @@id([postId, termTaxonomyId])
}

model PostMeta {
  id     Int    @id @default(autoincrement())
  postId Int
  key    String
  value  String

  post Post @relation(fields: [postId], references: [id])

  @@index([key])
}

model Comment {
  id        Int           @id @default(autoincrement())
  postId    Int
  authorId  String?
  content   String
  status    CommentStatus @default(APPROVED)
  createdAt DateTime      @default(now())

  post   Post  @relation(fields: [postId], references: [id])
  author User? @relation(fields: [authorId], references: [id])
}
